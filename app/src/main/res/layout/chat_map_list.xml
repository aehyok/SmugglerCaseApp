<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/chat_map_list_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:lines="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/chat_map_list_image"
        />
    <TextView
        android:id="@+id/chat_map_list_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_map_list_text1"
        android:lines="1"
        android:padding="5dp"
        android:textSize="13sp"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/chat_map_list_image"
        android:textColor="@color/grey"
       />
    <ImageView
        android:id="@+id/chat_map_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_map_check"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:visibility="invisible"

        />

</RelativeLayout>
