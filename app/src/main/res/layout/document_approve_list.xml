<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
   >

    <ImageView
        android:id="@+id/document_approve_list_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
         />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/document_approve_list_image"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:text="编号:"
        android:textStyle="bold"
       android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/document_approve_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/blue"
        android:text="速读法撒旦发射点发"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_approve_list_title"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:text="名称:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/document_approve_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_approve_list_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/text2"
        android:layout_marginStart="5dp"
        android:text="sdfsdf"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_approve_list_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:text="状态:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/document_approve_list_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_approve_list_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/text3"
        android:layout_marginStart="5dp"
        android:text="张三"
        android:textColor="@color/blue"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_approve_list_person"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:text="登记日期:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/document_approve_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text4"
        android:layout_toEndOf="@+id/text4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="2018年11月11日"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:text="办案单位:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/document_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text5"
        android:layout_toEndOf="@+id/text5"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:text="TextView"

     />
</RelativeLayout>
