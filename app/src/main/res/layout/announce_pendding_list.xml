<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/announce_list_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="案件"
        android:textColor="@color/black"
        android:textSize="15sp"

        />

    <TextView
        android:id="@+id/announce_list_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announce_list_title_text"
        android:layout_alignStart="@+id/announce_list_title_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="14sp"
        android:background="@drawable/login_button_shape"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/ic_access_time_blue_500_36dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imageView4"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_av_timer_purple_500_36dp" />
</RelativeLayout>
